COL_F16LightYellow='\e[93m'
COL_F16LightBlue='\e[94m'
COL_F16LightMagenta='\e[95m'
COL_F16LightCyan='\e[96m'
COL_F16White='\e[97m'
# ... background
COL_B16Default='\e[49m'
COL_B16Black='\e[40m'
COL_B16Red='\e[41m'
COL_B16Green='\e[42m'
