COL_CYAN='\[\e[38;5;30m\]'
COL_YELLOW='\[\e[38;5;227m\]'
COL_WHITE='\[\e[37m\]'


# 8/16 Colors ...
# ... foreground
COL_F16Default='\e[39m'
COL_F16Black='\e[30m'
COL_F16Red='\e[31m'
